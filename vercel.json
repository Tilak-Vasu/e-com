{
  "version": 2,
  "builds": [
    {
      "src": "backend/backend/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      
      "config": { "distDir": "dist" }
    }
  ],
  
  "build": {
    "env": {
        
      "NODE_VERSION": "18.x" 
    },
    
    "command": "bash build.sh" 
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}